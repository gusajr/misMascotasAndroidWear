<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unam.mismascotas">

    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pojo.EnvioNotificacion"></activity>
        <activity
            android:name=".CambiarCuenta"
            android:parentActivityName=".pojo.MainActivity" />
        <activity
            android:name=".About"
            android:parentActivityName=".pojo.MainActivity" />
        <activity
            android:name=".Contact"
            android:parentActivityName=".pojo.MainActivity" />
        <activity
            android:name=".pojo.MascotasFav"
            android:parentActivityName=".pojo.MainActivity" />
        <activity android:name=".pojo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".pojo.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".pojo.ToqueAnimal">
            <intent-filter>
                <action android:name="TOQUE_ANIMAL"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>